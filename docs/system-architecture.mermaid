  RESULT_PROC --> HL7_HANDLER
  MSG_PARSER --> ACK_MGR

  %% Protocol ‚Üí Transport
  ASTM_HANDLER --> SERIAL_CONN
  HL7_HANDLER --> TCP_CONN
  MSG_PARSER --> CONN_POOL
  ACK_MGR --> RETRY_MGR

  %% Transport ‚Üí Data
  CONN_POOL --> RESULT_BUFFER
